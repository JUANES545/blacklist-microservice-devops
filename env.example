# Configuración para desarrollo local
# Copia este archivo como .env y ajusta los valores

# Base de datos (para desarrollo local usar SQLite)
DATABASE_URL=sqlite:///blacklist.db

# Para producción con PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://user:password@host:port/database

# JWT Secret (cambiar en producción)
JWT_SECRET=dev-secret-key-change-in-production

# Token Bearer estático para autenticación
APP_ALLOWED_BEARER=dev-bearer-token

# Entorno Flask
FLASK_ENV=development

# Puerto (opcional, por defecto 5000)
PORT=5000

# Nivel de logging
LOG_LEVEL=INFO
